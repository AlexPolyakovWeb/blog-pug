mixin post-widget(img, title, info, link="#")
    .widget-post

        .widget-post__img
            a(href= link)
                img(src="./img/small-thumbs/" + img, alt= title)

        h4.widget-post__title
            a(href= link) #{title}

        .widget-post__info
            p.widget-post__info-text #{info}